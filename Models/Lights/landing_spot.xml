<?xml version="1.0"?>
<PropertyList>

<model>
 <name>SpotLight</name>
 <path>Aircraft/generic/spotlight.xml</path>
 <offsets>
  <x-m>-16.2</x-m>
  <y-m>0.05</y-m>
  <z-m>-2.65</z-m>
 </offsets>
 <overlay>
  <params>
   <name>SpotLight</name>
   <power-source>controls/lighting/landing-lights</power-source>
   <direction>
    <x>1.0</x>
    <y>0.0</y>
    <z>1.0</z>
   </direction> 
   <ambient>
    <r>1.0</r>
    <g>1</g>
    <b>1</b>
   </ambient>
   <specular>
    <r>1.0</r>
    <g>1.0</g>
    <b>1.0</b>
   </specular> 
  </params>
 </overlay>
</model>

  <animation>
  <name>SpotLight</name>
  <type>scale</type>
  <x-offset>2.0</x-offset>
  <y-offset>2.0</y-offset>
  <z-offset>2.0</z-offset>
  <center>
  <x-m>-16.2</x-m>
  <y-m>0.05</y-m>
  <z-m>-2.65</z-m>
  </center>
 </animation>

<model>
 <name>SpotLight2</name>
 <path>Aircraft/generic/spotlight.xml</path>
 <offsets>
  <x-m>-16.2</x-m>
  <y-m>-0.05</y-m>
  <z-m>-2.65</z-m>
 </offsets>
 <overlay>
  <params>
   <name>SpotLight2</name>
   <power-source>controls/lighting/landing-lights</power-source>
   <direction>
    <x>1.0</x>
    <y>0.0</y>
    <z>1.0</z>
   </direction> 
   <ambient>
    <r>1.0</r>
    <g>1</g>
    <b>1</b>
   </ambient>
   <specular>
    <r>1.0</r>
    <g>1.0</g>
    <b>1.0</b>
   </specular> 
  </params>
 </overlay>
</model>

  <animation>
  <name>SpotLight2</name>
  <type>scale</type>
  <x-offset>2.0</x-offset>
  <y-offset>2.0</y-offset>
  <z-offset>2.0</z-offset>
  <center>
  <x-m>-16.2</x-m>
  <y-m>-0.05</y-m>
  <z-m>-2.65</z-m>
  </center>
 </animation>


 <animation>
  <type>select</type>
   <name>Spotlight</name>
   <condition>
    <and>
     <property>controls/lighting/landing-lights</property>
     <greater-than>
      <property>gear/gear/position-norm</property>
      <value>0.98</value>
     </greater-than>
    </and>
   </condition>
 </animation>


</PropertyList>
