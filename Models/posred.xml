 <animation>
	 <type>rotate</type>
	 <object-name>left_poslight</object-name>
	 <axis>
		 <x> 0.0</x>
		 <y> 0.0</y>
		 <z>-1.0</z>
	 </axis>
	 <center>
		 <x-m> 0.0</x-m>
		 <y-m>-0.0</y-m>
		 <z-m> 0.0</z-m>
   </center>
	 <condition>
		 <and>
			 <equals>
				 <property>controls/flight/wing-sweep</property>
