			 <command>property-toggle</command>
			 <property>armament/oso/x-to-target</property>
		 </binding>
		 <binding>
			      <command>nasal</command>
			      <script>weapons.wpn_update()</script>
		 </binding>
	 </action>
</animation>
<animation>
	 <type>textranslate</type>
	 <object-name>bombnav_button.013</object-name>
	 <property>armament/oso/x-to-target</property>
	 <factor>0.038</factor>
         <step>1</step>
	 <axis>
