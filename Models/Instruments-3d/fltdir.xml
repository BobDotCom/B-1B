<?xml version="1.0"?>
<!--
sweat by maggse
    -->
<PropertyList>

 <path>fltdir.ac</path>

 <!-- flt dir mode toggle -->

<animation>
	<type>rotate</type>
	<object-name>knob_fltdir</object-name>
	<property>controls/switches/fltdir</property>
	<interpolation>

		<entry>
			<ind>-0.0</ind>
			<dep>30.0</dep>
		</entry>
		<entry>
			<ind>0.25</ind>
			<dep>-43</dep>
		</entry>
		<entry>
			<ind>0.50</ind>
			<dep>-90</dep>
		</entry>
		<entry>
			<ind>0.75</ind>
			<dep>-145</dep>
		</entry>
		<entry>
			<ind>1.00</ind>
			<dep>-190</dep>
		</entry>
	</interpolation>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
	</axis>
	<center>
		<x-m>0.00542</x-m>
		<y-m>0.05264</y-m>
		<z-m>0.09826</z-m>
	</center>
</animation>
<animation>
	<type>material</type>
	<object-name>knob_fltdir</object-name>
	 <emission>
		 <red>0.9</red>
		 <green>0.5</green>
		 <blue>0.9</blue>
		 <factor-prop>controls/lighting/instruments-norm</factor-prop>
	</emission>
</animation>

<!-- clickable buttons block (osg only!) xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-->

<animation>
	<type>pick</type>
	<object-name>knob_fltdir</object-name>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<interval-sec>0.3</interval-sec>
		<binding>
			<command>property-adjust</command>
			<property>controls/switches/fltdir</property>
			<step>0.25</step>
			<min>0.0</min>
			<max>1.00</max>
		</binding>
		<binding>
			<command>nasal</command>
			<script>b1b.fltdir()</script>
		</binding>
	</action>
	<action>
		<button>1</button>
		<repeatable>true</repeatable>
		<interval-sec>0.3</interval-sec>
		<binding>
			<command>property-adjust</command>
			<property>controls/switches/fltdir</property>
			<step>-0.25</step>
			<min>0.0</min>
			<max>1.00</max>
		</binding>
		<binding>
			<command>nasal</command>
			<script>b1b.fltdir()</script>
		</binding>
	</action>
</animation>

<animation>
	<type>material</type>
	<object-name>fltdir</object-name>
<object-name>pitch_steer</object-name>
	 <emission>
		 <red>0.9</red>
		 <green>0.5</green>
		 <blue>0.9</blue>
		 <factor-prop>controls/lighting/instruments-norm</factor-prop>
	</emission>
</animation>


<!-- Label Text -->

<text>
	<name>LabelText</name>
	<type type="string">literal</type>
		<text type="string">Flt-DIR</text>
	<draw-text type="bool">true</draw-text>
	<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
	<axis-alignment>yz-plane</axis-alignment>
	<max-height>0.2</max-height>
	<max-width>0.07</max-width>
	<font-resolution>
		<width type="int">32</width>
		<height type="int">32</height>
	</font-resolution>
	<alignment>center-center</alignment>
	<offsets>
		<x-m> 0.04</x-m>
		<y-m> 0.10 </y-m>
		<z-m> 0.10 </z-m>
	</offsets>
</text>

<animation>
	<type>material</type>
		<object-name>LabelText</object-name>
	<emission>
		<red>1.0</red>
		<green>0.8</green>
		<blue>0.0</blue>
	</emission>
</animation>

<animation>
	<type>select</type>
		<object-name>LabelText</object-name>
	<condition>
		<property>/sim/panel-hotspots</property>
	</condition>
</animation>


</PropertyList>
