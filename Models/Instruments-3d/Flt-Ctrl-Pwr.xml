<?xml version="1.0"?>

<PropertyList>

 <path>Flt-Ctrl-Pwr.ac</path>
  <animation>
    <object-name>Flt-Ctrl-Pwr</object-name>
    <object-name>Flap-Slat-Resest</object-name>
    <object-name>PTCH-AUG</object-name>
    <object-name>PTCH-TRIM</object-name>
    <object-name>ROLL-AUG</object-name>
    <object-name>ROLL-TRIM</object-name>
    <object-name>SMCS-Reset</object-name>
    <object-name>SPD-BRK</object-name>
    <object-name>SPOILERS</object-name>
    <object-name>YAW-AUG</object-name>
    <object-name>YAW-TRIM</object-name>
    <object-name>ALT-WG-SWP</object-name>
    <object-name>4screws</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Flt-Ctrl-Pwr</object-name>
    <object-name>Flap-Slat-Resest</object-name>
    <object-name>PTCH-AUG</object-name>
    <object-name>PTCH-TRIM</object-name>
    <object-name>ROLL-AUG</object-name>
    <object-name>ROLL-TRIM</object-name>
    <object-name>SMCS-Reset</object-name>
    <object-name>SPD-BRK</object-name>
    <object-name>SPOILERS</object-name>
    <object-name>YAW-AUG</object-name>
    <object-name>YAW-TRIM</object-name>
    <object-name>ALT-WG-SWP</object-name>
	 <emission>
		 <red>0.3</red>
		 <green>0.0</green>
		 <blue>0.0</blue>
		 <factor-prop>controls/lighting/instruments-norm</factor-prop>
	</emission>
  </animation>

   <animation>
	 <type>rotate</type>
	 <object-name>SPOILERS</object-name>
	 <property>controls/flight/spoilers</property>
	 <interpolation>
		 <entry>
			 <ind>0.0</ind>
			 <dep>30.0</dep>
		 </entry>
		 <entry>
			 <ind>1.0</ind>
			 <dep>-30.0</dep>
		 </entry>
	 </interpolation>
	 <axis>
		 <x>0.0</x>
		 <y>1.0</y>
		 <z>0.0</z>
	 </axis>
	 <center>
		 <x-m>-0.03563</x-m>
		 <y-m> 0.03027</y-m>
		 <z-m> 0.00165/</z-m>
   </center>
 </animation>

 <!-- clickable buttons block (osg only!) xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-->

 <animation>
	 <type>pick</type>
	 <object-name>SPOILERS</object-name>
	 <action>
		 <button>0</button>
		 <repeatable>true</repeatable>
		 <interval-sec>0.1</interval-sec>
		 <binding>
			 <command>property-toggle</command>
			 <property>controls/flight/spoilers</property>
		 </binding>
	 </action>
</animation>


<!-- Label Text -->

<text>
	<name>LabelText</name>
	<type type="string">literal</type>
		<text type="string">Flt-CTRL-PWR</text>
	<draw-text type="bool">true</draw-text>
	<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
	<axis-alignment>yz-plane</axis-alignment>
	<max-height>0.2</max-height>
	<max-width>0.07</max-width>
	<font-resolution>
		<width type="int">32</width>
		<height type="int">32</height>
	</font-resolution>
	<alignment>center-center</alignment>
	<offsets>
		<x-m> 0.04</x-m>
		<y-m> 0.0 </y-m>
		<z-m> 0.0 </z-m>
	</offsets>
</text>

<animation>
	<type>material</type>
		<object-name>LabelText</object-name>
	<emission>
		<red>1.0</red>
		<green>0.8</green>
		<blue>0.0</blue>
	</emission>
</animation>

<animation>
	<type>select</type>
		<object-name>LabelText</object-name>
	<condition>
		<property>/sim/panel-hotspots</property>
	</condition>
</animation>

</PropertyList>
