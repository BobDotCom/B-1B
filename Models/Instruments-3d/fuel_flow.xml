<PropertyList>

 <path>fuel_flow.ac</path>

<animation> 
  <type>select</type> 
   <condition> 
    <greater-than> 
     <property>systems/electrical/generic-pwr</property>
     <value>27</value> 
    </greater-than>
   </condition> 
   <object-name>Bar</object-name>
   <object-name>Digit_100</object-name>
   <object-name>Digit_10</object-name>
   <object-name>Digit_1</object-name>
   <object-name>Digit_0.1</object-name>
  </animation> 
  
  <animation> 
   <type>textranslate</type> 
    <object-name>Digit_0.1</object-name> 
      <property>engines/full_fuel_flow</property>
  <factor>-0.001</factor>
  <step>100</step>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
        <center>
            <x-m>0.00481</x-m>
            <y-m>-0.01415</y-m>
            <z-m>-0.011585</z-m>
        </center>
 </animation>

  <animation> 
   <type>textranslate</type> 
    <object-name>Digit_1</object-name> 
      <property>engines/full_fuel_flow</property>
  <factor>-0.0001</factor>
  <step>1000</step>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
        <center>
            <x-m>0.00481</x-m>
            <y-m>-0.01415</y-m>
            <z-m>-0.011585</z-m>
        </center>
 </animation>

  <animation> 
   <type>textranslate</type> 
    <object-name>Digit_10</object-name> 
      <property>engines/full_fuel_flow</property>
  <factor>-0.00001</factor>
  <step>10000</step>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
        <center>
            <x-m>0.00481</x-m>
            <y-m>-0.01415</y-m>
            <z-m>-0.011585</z-m>
        </center>
 </animation>

  <animation> 
   <type>textranslate</type> 
    <object-name>Digit_100</object-name> 
      <property>engines/full_fuel_flow</property>
  <factor>-0.000001</factor>
  <step>100000</step>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
        <center>
            <x-m>0.00481</x-m>
            <y-m>-0.01415</y-m>
            <z-m>-0.011585</z-m>
        </center>
 </animation>

 <animation>
	 <type>material</type>
	 <object-name>fuel_flow</object-name>
	 <emission>
		 <red>0.9</red>
		 <green>0.5</green>
		 <blue>0.9</blue>
		 <factor-prop>controls/lighting/instruments-norm</factor-prop>
	</emission>
</animation>

</PropertyList>
