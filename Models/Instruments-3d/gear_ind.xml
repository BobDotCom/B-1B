<?xml version="1.0"?>
<!--
sweat by maggse
    -->
<PropertyList>

 <path>gear_ind.ac</path>

 <!-- gear switch -->

 <animation>
	 <type>rotate</type>
	 <object-name>switch_gear</object-name>
	 <property>controls/gear/gear-down</property>
	 <interpolation>
		 <entry>
			 <ind>0.0</ind>
			 <dep>-90.0</dep>
		 </entry>
		 <entry>
			 <ind>1.0</ind>
			 <dep>0.0</dep>
		 </entry>
	 </interpolation>
	 <axis>
		 <x>0.0</x>
		 <y>1.0</y>
		 <z>0.0</z>
	 </axis>
	 <center>
		 <x-m> 0.00061</x-m>
		 <y-m>-0.15600</y-m>
		 <z-m> 0.10550</z-m>
	 </center>
 </animation>
 <animation>
	 <type>material</type>
	 <object-name>switch_gear</object-name>
	 <object-name>fuel_valves.002</object-name>
	 <emission>
		 <red>0.3</red>
		 <green>0.0</green>
		 <blue>0.0</blue>
		 <factor-prop>controls/lighting/instruments-norm</factor-prop>
	</emission>
</animation>

 <!-- clickable buttons block (osg only!) xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-->

 <animation>
	 <type>pick</type>
	 <object-name>switch_gear</object-name>
	 <condition>
		 <less-than>
			 <property>gear/gear/wow</property>
			 <value>1.0</value>
		 </less-than>
	 </condition>
	 <action>
		 <button>0</button>
		 <repeatable>true</repeatable>
		 <interval-sec>0.3</interval-sec>
		 <binding>
			 <command>property-toggle</command>
			 <property>controls/gear/gear-down</property>
		 </binding>
	 </action>
</animation>

<!-- gear ind -->

 <animation>
	 <type>select</type>
	 <object-name>gearind_fr</object-name>
	 <condition>
		 <equals>
			 <property>gear/gear[0]/position-norm</property>
			 <value>1.0</value>
		 </equals>
	 </condition>
 </animation>
 <animation>
	 <type>material</type>
	 <object-name>gearind_fr</object-name>
	 <emission>
		 <red>0.0</red>
		 <green>1.0</green>
		 <blue>0.0</blue>
		 <factor-prop>gear/gear[0]/position-norm</factor-prop>
	 </emission>
</animation>

 <animation>
	 <type>select</type>
	 <object-name>gearind_bl</object-name>
	 <condition>
		 <equals>
			 <property>gear/gear[1]/position-norm</property>
			 <value>1.0</value>
		 </equals>
	 </condition>
 </animation>
 <animation>
	 <type>material</type>
	 <object-name>gearind_bl</object-name>
	 <emission>
		 <red>0.0</red>
		 <green>1.0</green>
		 <blue>0.0</blue>
		 <factor-prop>gear/gear[1]/position-norm</factor-prop>
	 </emission>
</animation>

 <animation>
	 <type>select</type>
	 <object-name>gearind_br</object-name>
	 <condition>
		 <equals>
			 <property>gear/gear[3]/position-norm</property>
			 <value>1.0</value>
		 </equals>
	 </condition>
 </animation>
 <animation>
	 <type>material</type>
	 <object-name>gearind_br</object-name>
	 <emission>
		 <red>0.0</red>
		 <green>1.0</green>
		 <blue>0.0</blue>
		 <factor-prop>gear/gear[3]/position-norm</factor-prop>
	 </emission>
</animation>


<!-- Label Text -->

<text>
	<name>LabelText</name>
	<type type="string">literal</type>
		<text type="string">Gear-Ind</text>
	<draw-text type="bool">true</draw-text>
	<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
	<axis-alignment>yz-plane</axis-alignment>
	<max-height>0.2</max-height>
	<max-width>0.07</max-width>
	<font-resolution>
		<width type="int">32</width>
		<height type="int">32</height>
	</font-resolution>
	<alignment>center-center</alignment>
	<offsets>
		<x-m> 0.08</x-m>
		<y-m>-0.20</y-m>
		<z-m> 0.14</z-m>
	</offsets>
</text>

<animation>
	<type>material</type>
		<object-name>LabelText</object-name>
	<emission>
		<red>0.9</red>
		<green>0.5</green>
		<blue>0.9</blue>
	</emission>
</animation>

<animation>
	<type>select</type>
		<object-name>LabelText</object-name>
	<condition>
		<property>/sim/panel-hotspots</property>
	</condition>
</animation>

</PropertyList>
