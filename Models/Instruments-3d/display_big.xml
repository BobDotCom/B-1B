<PropertyList>

 <path>display_big.ac</path>

 <!--lights ind on off status -->

 <animation>
	 <type>select</type>
	 <object-name>rep_light_refuel</object-name>
	 <condition>
	      <or>
		 <equals>
			 <property>engines/engine[0]/out-of-fuel</property>
			 <value>1.0</value>
		 </equals>
		 <and>
		 <equals>
			 <property>controls/engines/engine[0]/cutoff</property>
			 <value>1.0</value>
		 </equals>
		 <equals>
			 <property>gear/gear[0]/wow</property>
			 <value>0.0</value>
		 </equals>
	        </and>
	      </or>
	 </condition>
 </animation>
 <animation>
	 <type>select</type>
	 <object-name>rep_light_brake</object-name>
	 <condition>
	    <and>
		 <equals>
			 <property>gear/gear[0]/wow</property>
			 <value>1.0</value>
		 </equals>
		 <or>
			 <equals>
				 <property>controls/gear[0]/brake-left</property>
				 <value>1.0</value>
		 	</equals>
			<equals>
				<property>controls/gear[0]/brake-right</property>
				<value>1.0</value>
		 	</equals>
			<equals>
				<property>controls/gear[0]/brake-parking</property>
				<value>1.0</value>
		 	</equals>
		</or>
	    </and>
	 </condition>
 </animation>

 <animation>
	 <type>select</type>
	 <object-name>rep_gforce</object-name>
	 <condition>
		 <greater-than>
			 <property>accelerations/pilot-g</property>
			 <value>4.0</value>
		 </greater-than>
	 </condition>
 </animation>

 <animation>
	 <type>select</type>
