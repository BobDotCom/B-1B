      <Kp>0.25</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>-33.33</u_min> <!-- minimum output clamp -16.67-->
      <u_max>33.33</u_max>   <!-- maximum output clamp 33.33-->
    </config>
  </pi-simple-controller>

