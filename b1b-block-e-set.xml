            </MFD-color>
        </model>
    </sim>

    <input>
        <keyboard> 
            <key n="53">
                <name>CTRL-5</name>
                <mod-ctrl>
                    <desc>Reload MFD display system</desc>
                    <binding>
                        <command>nasal-module-reload</command>
                        <module>displays</module>
                    </binding>
                </mod-ctrl>
            </key>
        </keyboard>
    </input> 
