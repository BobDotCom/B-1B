<?xml version="1.0"?>
<PropertyList>
	<name>savefail</name>
  	<modal>true</modal>
  	<layout>vbox</layout>
  	<draggable>true</draggable>
    <resizable>false</resizable>
    <!--<width>250</width>
    <height>550</height>-->
    <color>
		<red>1</red>
		<green>0.5</green>
		<blue>0.5</blue>
	</color>

    <group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>

		<text>
			<label>Saving failed</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<default>1</default>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<color>
			<red>1</red>
			<green>0</green>
			<blue>0</blue>
		</color>
		</button>
	</group>

	<text>
	    <label>Most likely you tried to save to a location that</label>
	    <height>25</height>
	</text>

	<text>
	    <label>Flightgear aircraft do not have permission to write to.</label>
	    <height>25</height>
	</text>

	<text>
	    <label>Try this folder:</label>
	    <height>25</height>
	</text>

	<text>
	    <label></label>
	    <height>10</height>
	</text>

	<text>
		<halign>left</halign>
	    <property>sim/fg-home-export</property>
	    <height>25</height>
	</text>

	<text>
	    <label></label>
	    <height>10</height>
	</text>

</PropertyList>
